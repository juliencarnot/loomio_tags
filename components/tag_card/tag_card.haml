.tag-card.lmo-card
  %h2.lmo-card-heading{translate: "loomio_tags.card_title"}
  %loading{ng-if: "initExecuting"}
  .poll-tags-card__tags{ng-if: "!initExecuting"}
    .poll-common-helptext{ng-if: "!tags().length", translate: "loomio_tags.helptext"}
    %tag_list{group: "group", admin: "canAdministerGroup()"}
    .lmo-flex.lmo-flex__space-between
      %div
      %md-button.md-primary.md-raised{ng-click: "openTagForm()", translate: "loomio_tags.new_tag"}
